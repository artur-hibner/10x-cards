---
import Layout from "../layouts/Layout.astro";
import { FlashcardsPageClient } from "../components/FlashcardsPageClient";
---

<Layout title="Moje Fiszki | 10x Cards">
  <div class="container mx-auto px-4 py-8 max-w-6xl">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Moje Fiszki</h1>
      <p class="text-gray-600">Przeglądaj i zarządzaj swoimi fiszkami</p>
    </div>

    <!-- Komponent React ze wszystką funkcjonalnością -->
    <FlashcardsPageClient client:load />

    <!-- Fallback jeśli React nie działa -->
    <noscript>
      <div class="p-4 bg-red-50 border border-red-200 rounded">
        <p>JavaScript jest wyłączony. Ta strona wymaga JavaScript do działania.</p>
      </div>
    </noscript>
  </div>
</Layout>
