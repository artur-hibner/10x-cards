---
import AuthLayout from "../../layouts/AuthLayout.astro";
import { RegisterForm } from "../../components/auth/RegisterForm";
---

<AuthLayout title="10x Cards - Rejestracja" wideContent={true}>
  <div class="flex flex-col md:flex-row w-full gap-8 items-center">
    <!-- Lewa strona - formularz rejestracji -->
    <div class="w-full md:w-1/2">
      <RegisterForm client:load />
    </div>

    <!-- Linia pionowa -->
    <div class="hidden md:block h-[70%] w-px bg-white self-center"></div>

    <!-- Prawa strona - treść z index.astro -->
    <div class="w-full md:w-1/2 text-center md:text-left">
      <h1 class="text-3xl font-bold mb-3">10x Cards</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400 mb-4">
        Efektywne tworzenie i zarządzanie fiszkami edukacyjnymi
      </p>

      <h2 class="text-xl font-medium mt-4 mb-2">Zalety konta:</h2>
      <ul class="list-disc pl-5 mb-4 space-y-1 text-left">
        <li>Automatyczne zapisywanie wygenerowanych fiszek</li>
        <li>Dostęp do osobistej kartoteki fiszek</li>
        <li>Historia generowanych treści</li>
        <li>Analiza wyników nauki</li>
      </ul>
    </div>
  </div>
</AuthLayout>
