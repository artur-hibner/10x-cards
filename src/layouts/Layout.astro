---
import "../styles/global.css";
import { AuthStatus } from "../components/auth/AuthStatus";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
const user = Astro.locals.user;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header
      class="w-full h-16 flex items-center justify-between px-4 sm:px-6 lg:px-8 border-b border-gray-200 dark:border-gray-800 bg-brand-purple text-white"
    >
      <div class="flex items-center">
        <a href="/" class="flex items-center gap-2">
          <img src="/10xcards-logo.png" alt="10x Cards Logo" class="h-8" />
        </a>
      </div>

      {
        user && (
          <nav class="hidden md:flex items-center space-x-6 flex-1 justify-center">
            <a
              href="/generate"
              class="text-white hover:text-gray-200 px-3 py-2 rounded-md text-sm font-medium transition-colors"
            >
              Generuj Fiszki
            </a>
            <a
              href="/flashcards"
              class="text-white hover:text-gray-200 px-3 py-2 rounded-md text-sm font-medium transition-colors"
            >
              Moje Fiszki
            </a>
          </nav>
        )
      }

      <div>
        <AuthStatus client:load isLoggedIn={!!user} userEmail={user?.email} />
      </div>
    </header>
    <main class="container mx-auto px-4 py-6">
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
